<odoo>
    <data>
        <!-- 扩展列表视图中的列 -->
        <record model="ir.ui.view" id="ppp.p1_task.list">
          <field name="name">p1_task list</field>
          <field name="model">p1.task</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="age"/>
            </tree>
          </field>
        </record>
        <!--触发窗口，引用model-->
        <act_window id="ppp.action_p1_task"
                    name="人员记录"
                    res_model="p1.task"
                    view_mode="tree,form"
        />
        <!--创建菜单，设置上级菜单，触发窗口-->
        <menuitem id="ppp.menu_p1_task"
                  parent="ppp.menu_root"
                  name="Menu P1"
                  action="ppp.action_p1_task" />
    </data>
</odoo>